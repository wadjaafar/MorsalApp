<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.afromoney_ltd.morsal.Purchase">


    <Button
        android:id="@+id/purchase_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/purchase_cashback"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp"
        android:onClick="purchaseButton"
        android:text="Purchase"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/purchase_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="purchaseButton"
        android:text="Purchase Cashback"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:id="@+id/purchase_reversal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:onClick="purchaseButton"
        android:text="Purchase Reversal"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="331dp" />
</RelativeLayout>
